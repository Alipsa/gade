<assembly>
  <id>dist</id>
  <!-- Specifies that our binary distribution is a zip package -->
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>.</baseDirectory>

  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>org.openjfx</exclude>
      </excludes>
    </dependencySet>

    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib/mac</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.openjfx:javafx-base:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-controls:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-media:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-web:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-swing:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-graphics:jar:mac:${javafx.version}</include>
      </includes>
      <excludes>
        <exclude>org.openjfx:javafx-base:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-base:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-controls:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-controls:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-media:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-media:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-web:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-web:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-swing:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-swing:jar:win:${javafx.version}</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib/linux</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.openjfx:javafx-base:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-controls:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-media:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-web:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-swing:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-graphics:jar:linux:${javafx.version}</include>
      </includes>
      <excludes>
        <exclude>org.openjfx:javafx-base:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-base:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-controls:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-controls:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-media:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-media:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-web:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-web:jar:win:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-swing:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-swing:jar:win:${javafx.version}</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib/win</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.openjfx:javafx-base:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-controls:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-media:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-web:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-swing:jar:${javafx.version}</include>
        <include>org.openjfx:javafx-graphics:jar:win:${javafx.version}</include>
      </includes>
      <excludes>
        <exclude>org.openjfx:javafx-base:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-base:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-controls:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-controls:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-media:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-media:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-web:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-web:jar:mac:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-swing:jar:linux:${javafx.version}</exclude>
        <exclude>org.openjfx:javafx-swing:jar:mac:${javafx.version}</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>version.properties</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <file>
      <source>src/bin/gade-icon.png</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <file>
      <source>src/bin/gade-icon.ico</source>
      <outputDirectory>.</outputDirectory>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>*.jar</include>
        <include>*.exe</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/bin/</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>*.md</include>
        <include>gade.cmd</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/bin/</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>gade.sh</include>
        <include>createLauncher.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>