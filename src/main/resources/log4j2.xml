<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <!--PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" /-->
      <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c:%L - %msg%n" />
    </Console>
    <File name="GrideLog" fileName="gride.log">
      <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c:%L - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="info" additivity="false">
      <AppenderRef ref="console" />
      <AppenderRef ref="GrideLog" level="debug"/>
    </Root>
    <logger name="org.apache" level="info" additivity="false">
      <AppenderRef ref="console"/>
      <AppenderRef ref="GrideLog"/>
    </logger>
    <logger name="org.apache.commons" level="warn" additivity="false">
      <AppenderRef ref="console"/>
      <AppenderRef ref="GrideLog"/>
    </logger>
    <logger name="org.apache.commons" level="warn" additivity="false">
      <AppenderRef ref="console"/>
      <AppenderRef ref="GrideLog"/>
    </logger>
    <logger name="se.alipsa" level="info" additivity="false">
      <AppenderRef ref="console"/>
      <AppenderRef ref="GrideLog"/>
    </logger>
    <logger name="se.alipsa.gride.console" level="info" additivity="false">
      <AppenderRef ref="console"/>
      <AppenderRef ref="GrideLog"/>
    </logger>
    <!-- uncomment to see package loading out put etc. -->
    <!--logger name="se.alipsa.gride.console.ConsoleComponent" level="debug" additivity="false">
      <AppenderRef ref="console"/>
    </logger-->
  </Loggers>
</Configuration>